<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <form class="w-50 mx-auto mt-5" method="post" action="/create">
            <h2>SignUp</h2>
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="hidden" name="id" value="<%= Date.now() %>" >
                <input type="text" name="username" class="form-control">
              </div>
            <div class="mb-3">
              <label class="form-label">Email address</label>
              <input type="email" name="email" class="form-control">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label  class="form-label">Password</label>
              <input type="password" name="password" class="form-control">
            </div>
            <div class="mb-3">
              <label  class="form-label">Phone</label>
              <input type="tel" name="phone" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

        <table class="table caption-top" >
            <caption>
                <h2>User Data</h2>
            </caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>email</th>
                    <th>Password</th>
                    <th>phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% 
                 let count=0;
                 users.map((user)=>{ 
                    count++;
                %>
                    <tr>
                        <td><%= count %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.password %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <a class="btn btn-danger" href="/delete/user/<%= user.id %>">Delete</a>
                            <a class="btn btn-warning" href="/edit/user/?id=<%= user.id %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>